    <class>classes.Funcionario</class>
    <class>classes.Venda</class>
    <class>classes.Subscricao</class>
    <class>classes.Diagnostico</class>
    <class>classes.Manutencao</class>
    <class>classes.Reparacao</class>
    <class>classes.Pagamento</class>
    <class>classes.Fatura</class>
    <class>classes.LinhaArtigo</class>
    <class>classes.Fornecedor</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1521:XE"/>
      <property name="javax.persistence.jdbc.user" value="noro"/>
      <property name="javax.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
      <property name="javax.persistence.jdbc.password" value="noro"/>
      <property name="eclipselink.allow-zero-id" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
